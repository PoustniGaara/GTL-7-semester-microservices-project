{
  "Jwt": {
    "Issuer": "gtl-auth",
    "Audience": "gtl-api",
    "SigningKey": "DEV_ONLY_SUPER_LONG_SECRET_KEY_CHANGE_ME_1234567890_ABCDEFGHIJKLMNOPQRSTUVWXYZ"
  },
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "authCluster",
        "Match": { "Path": "/api/auth/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "catalog": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "search": {
        "ClusterId": "searchCluster",
        "Match": { "Path": "/api/search/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "checkout": {
        "ClusterId": "checkoutCluster",
        "Match": { "Path": "/api/checkout/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5101/" }
        }
      },
      "catalogCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5001/" }
        }
      },
      "searchCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5002/" }
        }
      },
      "checkoutCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5003/" }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
